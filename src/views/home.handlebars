                <div class="user-info">
                    <div>
                        <h2><span>Bienvenido {{name}} {{lastname}}</span></h2>
                    </div>
                    <div>
                        <h3>Mail: <span id="email">{{email}}</span></h3>
                    </div>
                    <div>
                        <h3>Role: <span id="role">{{role}}</span></h3>
                    </div>
                    <div>
                        <h3>userId: <span id="userId">{{id}}</span></h3>
                    </div>
                    <div>
                        <h3>Cart: <span id="cart">{{cart}}</span></h3>
