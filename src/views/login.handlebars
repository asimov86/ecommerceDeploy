<div class="container bg mt-5 mb-5 overflow-hidden">
  <div class="row mt-5 align-items-center">
    <div class="col-12">
      <h4>Formulario de login</h4>
    </div>
  </div>
  <div class="row mt-5 align-items-center">
    <div class="col-3">
      1 of 3
    </div>
    <div class="col-6">
      <!-- Formulario de inicio de sesión -->
      <form id="loginForm" class="row g-3 needs-validation bg-light rounded px-4 border border-secondary-subtle">
        <!-- Campo de correo electrónico -->
        <div class="col-12 position-relative mt-3">
          <label for="exampleFormControlInput1" class="form-label">Email address</label>
          <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com" name="email" >
          <div class="invalid-tooltip">
            Please enter a valid email.
          </div>
        </div>
        <!-- Campo de contraseña -->
        <div class="col-12 position-relative mt-3">
          <label for="validationTooltip02" class="form-label ">Password</label>
          <input type="password" class="form-control" id="validationTooltip02" placeholder="Password" name="password" >
          <div class="valid-tooltip">
            Looks good!
          </div>
        </div>
        <!-- Botones "Iniciar sesión" y "Regístrate" -->
        <div class="col-12 mt-4">
          <button id="login" class="btn btn-primary btn-block" type="submit">Iniciar sesión</button>
        </div>
         <div class="col-12 mt-2">
          <button id="registrate" class="btn btn-block btn-hover" onclick="goToRegister()">Regístrate</button>
        </div>
        <!-- Enlaces para iniciar sesión con GitHub y Google -->

        <div class="col-5 mt-3 mb-3 btn-hover">
            <a class="btn btn-link fw-semibold btn-block text-dark" href="/api/sessions/github" type="button">
            <i class="bi bi-github fs-5"></i>
            </a>
        </div>
        <div class="col-2 mt-3 mb-3 ">
            
        </div>
        <div class="col-5 mt-3 mb-3 btn-hover">
            <a class="btn btn-link fw-semibold btn-block text-secondary" href="/api/sessions/google" type="button">
            <i class="bi bi-google fs-5"></i>
            </a>
        </div>
      </form>
      <div class="col-12 mt-4">
        <a id="registrate" class="btn btn-block btn-hovery" href="/api/views/register" type="button">
          Regístrate  </a>
      </div>
      <div class="mt-3">
        <a class="btn btn-link fw-semibold " href="/api/views/resetPassword" type="button">¿Has olvidado tu contraseña?</a>
      </div>
    </div>
    <div class="col-3">
      3 of 3
    </div>
  </div>
  <div class="row mt-5 align-items-center">
    <div class="col-12">
      <div id="error-message" style="color: red;"></div>
    </div>
  </div>
  <p id="responseLogin"></p>
</div>

<script src="/js/login.js"></script>